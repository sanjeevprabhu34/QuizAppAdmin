<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

        <Button
            android:id="@+id/endDateBtn"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/endDateEt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/endDateEt" />

        <EditText
            android:id="@+id/optionPriority"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="Start Typing"
            android:inputType="number|numberDecimal"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/optionPercentageRemaining"
            app:layout_constraintEnd_toEndOf="@+id/optionPercentageRemaining"
            app:layout_constraintStart_toStartOf="@+id/optionPercentageRemaining"
            app:layout_constraintTop_toBottomOf="@+id/optionSwitch" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Option Priority in percentage"
            app:layout_constraintEnd_toEndOf="@+id/done_btn"
            app:layout_constraintStart_toEndOf="@+id/done_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Is this option the correct answer"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/optionTextEt" />

        <EditText
            android:id="@+id/startDateEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="79dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="26/05/2018 05:00"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/optionSwitch"
            app:layout_constraintEnd_toEndOf="@+id/endDateEt"
            app:layout_constraintStart_toStartOf="@+id/endDateEt"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="47dp"
            android:layout_marginEnd="47dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="46dp"
            android:text="End Date of telecast"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/optionTextEt"
            app:layout_constraintEnd_toStartOf="@+id/endDateEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionEt" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginBottom="69dp"
            android:layout_marginTop="69dp"
            android:text="Start Date of telecast"
            app:layout_constraintBottom_toBottomOf="@+id/optionTextEt"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Type Question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/questionEt"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginBottom="37dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="37dp"
            android:ems="10"
            android:hint="Start Typing"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/startDateBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <EditText
            android:id="@+id/endDateEt"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="25/06/2018 05:20"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/optionTextEt"
            app:layout_constraintEnd_toStartOf="@+id/endDateBtn"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="179dp"
            android:text="Option Text"
            app:layout_constraintEnd_toStartOf="@+id/optionTextEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/optionTextEt"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="Start Typing"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/optionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionTextEt" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/optionAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="9dp"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/done_btn"></LinearLayout>

        <TextView
            android:id="@+id/optionPercentageRemaining"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginBottom="201dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="202dp"
            android:text="100 % Remaining"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/startDateEt" />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Done"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toStartOf="@+id/optionTextEt"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/startDateBtn"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:text="--"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/startDateEt"
            app:layout_constraintEnd_toEndOf="@+id/optionTextEt"
            app:layout_constraintStart_toEndOf="@+id/startDateEt" />
</android.support.constraint.ConstraintLayout>