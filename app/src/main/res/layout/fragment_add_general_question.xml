<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

        <EditText
            android:id="@+id/optionPriority"
            android:layout_width="88dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="Start Typing"
            android:inputType="textPersonName|number"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/optionPercentageRemaining"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionSwitch" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Option Priority in percentage"
            app:layout_constraintEnd_toEndOf="@+id/done_btn"
            app:layout_constraintStart_toEndOf="@+id/done_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="217dp"
            android:text="Is this option the correct answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/startDateEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="26/05/2014 05:00"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/endDateEt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="55dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="41dp"
            android:text="End Date of telecast"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/endDateEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginBottom="79dp"
            android:layout_marginEnd="42dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="42dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:text="Start Date of telecast"
            app:layout_constraintBottom_toBottomOf="@+id/optionTextEt"
            app:layout_constraintEnd_toStartOf="@+id/startDateEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Type Question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/questionEt"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Start Typing"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/startDateEt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <EditText
            android:id="@+id/endDateEt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="25/05/2014 05:20"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/optionTextEt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="32dp"
            android:text="Option Text"
            app:layout_constraintBaseline_toBaselineOf="@+id/optionTextEt"
            app:layout_constraintEnd_toStartOf="@+id/optionTextEt"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/optionTextEt"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginBottom="136dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:hint="Start Typing"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/done_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/optionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionTextEt" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/optionAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="top"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/done_btn"></LinearLayout>

        <TextView
            android:id="@+id/optionPercentageRemaining"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:text="100 % Remaining"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/optionAddBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Done"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toStartOf="@+id/optionTextEt"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />
</android.support.constraint.ConstraintLayout>